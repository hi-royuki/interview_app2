

<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :メールアドレス%><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :パスワード%><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "ログイン" %>
  </div>
  <%= link_to "新規登録", new_user_path %>
<% end %>